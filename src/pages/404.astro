---
import Base from "@/layouts/Base.astro";
---

<Base title="404" footer={false}>
    <section>
        <label>404</label>
        <p>Page not found.</p>
    </section>
</Base>

<style>
    section {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding-block: calc(2rem + 4vw);
        color: var(--g4);

        label {
            font-size: calc(3rem + 4vw);
            font-weight: bold;
            margin-block-end: 1rem;
        }

        p {
            margin-block: 0 0.5rem;
        }
    }
</style>
