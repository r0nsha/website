<style>
    p.links {
        display: flex;
        gap: 0.5rem;
    }

    ul.posts {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        list-style: none;
        padding: 0;

        & > li {
            & > time {
                padding-inline-end: 1rem;
                color: var(--g3);
            }

            & > span {
                &::before {
                    content: "#";
                    margin-inline-end: 0.25rem;
                    color: var(--p);
                }

                & > a {
                    text-decoration: none;
                }
            }
        }
    }
</style>
