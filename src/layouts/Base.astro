---
import "../styles/normalize.css";
import "../styles/global.css";

import NavLink from "../components/NavLink.astro";

import { Font } from "astro:assets";
import { Icon } from "astro-icon/components";
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <Font cssVariable="--font-default" preload />
        <Font cssVariable="--font-header" preload />
        <Font cssVariable="--font-mono" preload />
        <title>Ron Shavit</title>
    </head>
    <body>
        <header>
            <div class="header-left">
                <a id="logo" href="/">Ron Shavit</a>
                <div class="header-links">
                    <a href="https://www.github.com/r0nsha" target="_blank" title="GitHub">
                        <Icon name="github" size="1.25rem" />
                    </a>
                    <a
                        href="https://www.linkedin.com/in/ron-shavit-b3b7074b/"
                        target="_blank"
                        title="LinkedIn"
                    >
                        <Icon name="linkedin" size="1.25rem" />
                    </a>
                </div>
            </div>
            <nav>
                <NavLink href="/">/about</NavLink>
                <NavLink href="/posts">/posts</NavLink>
            </nav>
        </header>
        <slot />
        <footer>
            <span>
                Contact me at <a href="mailto:me@ronshavit.com">me@ronshavit.com</a>
            </span>
            <a href="https://github.com/r0nsha/website" target="_blank" class="subtle"
                >Source code</a
            >
        </footer>
    </body>
</html>

<style>
    :root {
        body {
            max-width: 720px;
            padding: 1rem;
            margin: 0 auto;
        }

        header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 1rem;
            margin-block: 1rem 2rem;

            & .header-left {
                display: flex;
                align-items: center;
                gap: 1rem;
            }

            & .header-links {
                display: flex;
                align-items: center;
                gap: 0.5rem;

                & > a {
                    text-decoration: none;

                    &:hover {
                        background: transparent;
                        color: var(--p);
                    }
                }
            }

            & #logo {
                font-family: var(--font-header);
                font-size: 1.5rem;
                font-weight: bold;
                text-decoration: none;
            }

            & > nav {
                display: flex;
                align-items: center;
                gap: 0.5rem;
                font-size: 1rem;
            }
        }

        footer {
            display: flex;
            justify-content: space-between;
            flex-wrap: wrap;
            gap: 1rem;
            border-block-start: 2px dashed var(--g2);
            margin-block: 2rem;
            padding-block-start: 1rem;
        }

        @media (max-width: 720px) {
            body {
                width: auto;
                max-width: none;
                padding: 1.25rem;
                margin: 0;
            }

            header {
                margin-block-start: 0.5rem;
                flex-direction: column;
                align-items: flex-start;
                gap: 0.5rem;
            }

            footer {
                flex-direction: column;
                align-items: flex-start;
                gap: 0.5rem;
            }
        }
    }
</style>
